[ignore]
.*/.git/.*
.*/.idea/.*
.*/build/.*
.*/docs/.*

[include]
.*/src/**/*.js
.*/src/**/*.jsx

[libs]

[lints]

[options]
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.css
module.file_ext=.scss

# Allow direct (s)css imports
module.name_mapper.extension='css' -> 'empty/object'
module.name_mapper.extension='scss' -> 'empty/object'

# Map webpack module aliases
module.name_mapper='^@' ->'<PROJECT_ROOT>/src'
module.name_mapper='^classes' ->'<PROJECT_ROOT>/src/classes'
module.name_mapper='^components' ->'<PROJECT_ROOT>/src/components'
module.name_mapper='^config' ->'<PROJECT_ROOT>/config.js'
module.name_mapper='^plugins' ->'<PROJECT_ROOT>/src/plugins'
module.name_mapper='^styles' ->'<PROJECT_ROOT>/src/styles'

[strict]
