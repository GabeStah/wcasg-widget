{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": [
      "./@types"
    ],
    "paths": {
      "@*": [
        "src*"
      ],
      "assets/*": ["src/assets/*"],
      "classes/*": ["src/classes/*"],
      "config": ["config.ts"],
      "components/*": ["src/components/*"],
      "plugins/*": ["src/plugins/*"],
      "services/*": ["src/services/*"],
      "state/*": ["src/state/*"],
      "styles/*": ["src/styles/*"],
      "theme/*": ["src/theme/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "@types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
